@CHARSET "UTF-8";

body{
	background:#e9f5f4;
}

.navbar-nav > ul > li > .big-text{
	font-size:20px;
}

.navbar-nav > ul > li > .middle-text{
	font-size:18px;
}

.date-btn{
	position: relative;
    width: 300px;
    background-color: #fff;
}

.date-btn .text{
	float: left;
    width: 30%;
    font-size: 15px;
    text-align:center;
    line-height: 41px;
}

.date-btn input{
	width:70%;
}

.main-wrap .base-info .panel{
	padding:5px 0;
	margin-left:20px;
	background-color:rgba(255, 255, 255, 0);
}

/*对话框*/
.popup-wrap {
	position:fixed;
	left:0;
	top:0;
	right:0;
	bottom:0;
	z-index:999
}
.popup-cover {
	background:#000;
	opacity:.8;
	filter:alpha(opacity=60);
	position:fixed;
	left:0;
	top:0;
	right:0;
	bottom:0;
	z-index:1009
}
.popup-case {
	position:absolute;
	top:40%;
	left:50%;
	width:80%;
	background:#fff;
	z-index:1099
}
.popup-case .popup-title {
	height:36px;
	line-height:36px;
	color:#fff;
	text-align:center;
	font-size:16px;
	background:#ffb126
}
.popup-case .popup-cent {
	max-height:460px;
	overflow-y:auto
}
.popup-case .btn-close {
	width:14px;
	height:16px;
	display:inline-block;
	position:absolute;
	right:20px;
	top:10px;
	cursor:pointer;
	background:url("../images/sprites.png") -502px -536px no-repeat
}
.box-content p {
	text-align:center;
	padding:50px 10px;
	color:#999;
	font-size:16px;
	margin-bottom:0
}
.box-content button {
	font-family:Arial,"microsoft yahei",Verdana;
	color:#016dc0;
	height:50px;
	width:100%;
	font-size:16px;
	border:none;
	background:#fff;
	border-top:1px solid #dfe3e7;
	border-radius:0 0 8px 8px
}
.popup-wrap.type2 .popup-title {
	height:72px;
	line-height:72px;
	font-size:22px;
	color:#666;
	background:#fff;
	border-bottom:1px solid #eaeaea
}
.popup-wrap.type2 .btn-close {
	width:20px;
	height:20px;
	background-position:-173px -569px;
	right:24px;
	top:27px
}
.popup-wrap.type3 .popup-case .popup-title {
	height:46px;
	line-height:46px;
	font-size:18px
}

.car_select_popup{
	position: relative;
	padding:20px 20px;
}

.car_select_popup .title{
	text-align: center;
	font-size:20px;
}

.car_select_popup .car_select_table{
	margin-bottom: 0px;
}

.car_select_popup .car_select_table td{
	line-height:3.5;
	padding:0px 0px;
}

.car_select{
	margin-top:20px;
	height:450px;
	overflow:scroll; /*任何时候都强制显示滚动条*/
	overflow:auto; /*需要的时候会出现滚动条*/
	overflow-y:auto; /*控制Y方向的滚动条*/
}

.car_num {
    width: 50px;
    height: 26px;
    display: inline-block;
    border: 1px solid #ddd;
    text-align: center;
}

.del_num_btn, .add_num_btn {
    display: inline-block;
    width: 30px;
    height: 28px;
    color: #333;
    text-align: center;
    cursor: pointer;
    font-size: 20px;
    border: 1px solid #ddd;
    text-align: center;
}

.popupBtn{
	height:36px;
	/* padding-left:70%; */
	margin:10px 50px;
	position: absolute;
	right:0;
	z-index:100;
	bottom:0px;
}


